@model Assesment03.Models.Request

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/Request.css" />

<h4>Resource Request Form</h4>
<hr />
<center>
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <center>
            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <center><label>Stuent ID</label></center>
                            <input asp-for="Student_ID" class="form-control" />
                            <span asp-validation-for="Student_ID" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>

            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <center><label>Student Name</label></center>
                            <input asp-for="Student_Name" class="form-control" />
                            <span asp-validation-for="Student_Name" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>

            <table class>
                <tr>
                    <td>
                        <div class="form-group">
                            <center><label>Student Email</label></center>
                            <input asp-for="Student_Email" class="form-control" />
                            <span asp-validation-for="Student_Email" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>

            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <center><label>Unit Code</label></center>
                            <input asp-for="Unit_Code" class="form-control" />
                            <span asp-validation-for="Unit_Code" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>

            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <center><label>Resource Name</label></center>
                            <input asp-for="Resource_Name" class="form-control" />
                            <span asp-validation-for="Resource_Name" class="text-danger"></span>
                        </div>
                    </td>
                </tr>
            </table>

            <table>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
            </table>
        </center>
    </form>
</div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
