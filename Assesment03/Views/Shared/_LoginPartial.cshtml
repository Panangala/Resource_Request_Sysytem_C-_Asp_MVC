@using Assesment03.Data;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark btn-outline-info me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
    </li>
    <li class="nav-item">
            <a class="nav-link btn btn-link text-dark btn-outline-info me-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">LogOut</a>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark btn-outline-info me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark btn-outline-info me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
